{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "AWS_ACCESS_KEY_ID",
        "AWS_REGION",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "COGNITO_IDENTITY_POOL_ID",
        "COGNITO_USE_LOCAL_VERIFIER",
        "COGNITO_USER_POOL_CLIENT_ID",
        "COGNITO_USER_POOL_ID",
        "DATABASE_ENDPOINT",
        "DATABASE_TABLE_NAME",
        "DATABASE_PORT",
        "DATABASE_LAUNCH_LOCAL",
        "NODE_ENV",
        "SERVICE_ENDPOINTS"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {},
    "playwright": {
      "dependsOn": ["^build"],
      "env": ["ENDPOINT", "LAUNCH_WEB_SERVER", "USER_PASSWORD"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false
    }
  }
}
