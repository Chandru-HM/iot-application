{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["build/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "AWS_ACCESS_KEY_ID",
        "AWS_REGION",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "COGNITO_USE_LOCAL_VERIFIER",
        "COGNITO_USER_POOL_CLIENT_ID",
        "COGNITO_USER_POOL_ID",
        "DATABASE_ENDPOINT",
        "DATABASE_TABLE_NAME",
        "DATABASE_PORT",
        "DATABASE_LAUNCH_LOCAL"
      ]
    },
    "lint": {
      "dependencies": ["^build"]
    },
    "lint:commit": {
      "cache": false,
      "dependencies": ["^build"]
    },
    "lint:fix": {
      "dependencies": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependencies": ["^build"]
    },
    "test:commit": {
      "cache": false,
      "dependencies": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "dependencies": ["^build"]
    }
  }
}
