{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "module": "es2020",
    "rootDir": "./src",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "display": "Docs",
  "exclude": [
    "node_modules"
  ],
  "extends": "tsconfig/base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
